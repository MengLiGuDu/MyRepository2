<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
<mapper namespace="com.kcls.mapper.logistice.MaterialsMapper">  
	<sql id="list_sql">	
		<if test="type_id!=null">
			<if test="type_id!=''">
				<![CDATA[
					and type_id = #{type_id}
				]]>
			</if>
		</if>
		<if test="goods_name!= null">
			<if test="goods_name!= ''">
				<![CDATA[
					and goods_name like '%${goods_name}%'
				]]>
			</if>
		</if>
	</sql>
	
	<select id = "MaterialsList" parameterType="java.util.HashMap" resultType="java.util.HashMap">
		<![CDATA[
			select * from sms_2102_goods where 1=1
			]]>
			<include refid="list_sql"></include>
		<if test="pageNumber!= null and pageSize!= null">
		
			limit  #{pageNumber},#{pageSize};
		</if>
	</select>
	
	<select id = "MaterialsCount" parameterType="java.util.HashMap" resultType="java.lang.Integer">
		<![CDATA[
		select count(*) from sms_2102_goods where 1=1
		]]>
		<include refid="list_sql"></include>
	
			
	</select>
	
</mapper>
